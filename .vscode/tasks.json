{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Disk Scheduler",
            "type": "shell",
            "command": "javac",
            "args": [
                "--module-path",
                "lib",
                "--add-modules",
                "javafx.controls,javafx.fxml",
                "-d",
                "bin",
                "src/Backend/*.java",
                "src/Frontend/*.java",
                "src/Main.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$javac"]
        },
        {
            "label": "Run Disk Scheduler",
            "type": "shell",
            "command": "java",
            "args": [
                "--module-path",
                "lib",
                "--add-modules",
                "javafx.controls,javafx.fxml",
                "-cp",
                "bin",
                "Main"
            ],
            "dependsOn": ["Compile Disk Scheduler"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "bin/*"
            ]
        }
    ]
}
